{
  "name": "SpectralFlow Ultimate AI DevContainer",
  "build": { "dockerfile": "Dockerfile" },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "python.formatting.provider": "black",
    "editor.formatOnSave": true
  },
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter",
    "GitHub.copilot",
    "esbenp.prettier-vscode",
    "ms-vscode.vscode-typescript-next",
    "ms-azuretools.vscode-docker",
    "charliermarsh.ruff",
    "eamodio.gitlens",
    "mhutchie.git-graph"
  ],
  "postCreateCommand": "bash /workspaces/.devcontainer/scripts/setup.sh",
  "postStartCommand": "bash /workspaces/.devcontainer/scripts/start.sh",
  "forwardPorts": [8888, 5000, 7860],
  "remoteUser": "codespace",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ]
}
